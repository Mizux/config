#!/bin/sh

usage() {
  echo "Usage: rlist [-i | -n]" >&2
  echo "" >&2
  echo "Options:" >&2
  echo "  -i               sort by hostname (default)" >&2
  echo "  -n               sort by IP address" >&2
  echo "  --naoqi          display NAOqi status" >&2
  echo "  -s|--service SERVICE" >&2
  echo "                   filter using SERVICE (default: _nao._tcp)" >&2
  exit 1
}

OPT_ORDER="-i"
OPT_NAOQI='false'
OPT_SERVICE='_nao._tcp'

while [ $# -gt 0 ] ; do
  case $1 in
    '-n'|'-i')
      OPT_ORDER="$1"
      ;;
    '--naoqi')
      OPT_NAOQI="true"
      ;;
    '-s'|'--service')
      OPT_SERVICE="$2"
      shift
      ;;
    '-h')
      usage
      ;;
    *)
      usage
      ;;
  esac
  shift
done

IFS="
"
naoqi_list=
if ${OPT_NAOQI} ; then
  naoqi_list=$(avahi-browse -p -r -t _naoqi._tcp 2> /dev/null | grep "^=" | cut -f8 -d';')
fi

avahi-browse -p -r -t ${OPT_SERVICE} 2> /dev/null | grep "^=" | while read I;
do
  [ "$(echo -n $I | cut -f3 -d ';')" = 'IPv4' ] || continue
  HOST=`echo -n $I | cut -f 4 -d ';'`
  IP=`echo -n$I | cut -f 8 -d ';'`
  NAOQI_STATUS=" "
  if ${OPT_NAOQI} ; then
    NAOQI_STATUS="naoqi: $(echo ${naoqi_list} | grep ${IP} &>/dev/null && echo 'run' || echo '-')"
  fi
  case $OPT_ORDER in
    "-n")
      printf "%-25s => %-15s  %s\n" $HOST $IP $NAOQI_STATUS
      ;;
    *)
      printf "%-15s => %-25s  %s\n" $IP $HOST $NAOQI_STATUS
      ;;
  esac
done | sort

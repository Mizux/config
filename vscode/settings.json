// ~/.config/Code/User/settings.json
{
  "workbench.startupEditor": "none",
  "workbench.preferredDarkColorTheme": "GitHub Dark Default",
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.activeIconPack": "vue_vuex",
  "material-icon-theme.folders.associations": {
    "ortools": "src",
    "bazel": "config",
    "cmake": "config",
    "cpp": "include",
    "dotnet": "windows"
  },
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.showFoldingControls": "always",
  "editor.rulers": [80],
  "vim.handleKeys": {
    "<C-b>": false, // Primary Side Bar
    "<C-t>": false, // Secondary Side Bar
    "<C-j>": false, // Panel
    "<C-f>": false, // Find
    "<C-d>": true,  // vim's cut line
    "<C-k>": false, // Folding
    "<C-z>": false, // Undo
    "<C-s>": false, // Save
    "<C-w>": false, // Close
    "<C-q>": false, // Exit
  },
  // "vim.useCtrlKeys": false,
  "git.openRepositoryInParentFolders": "always",
  // PROJECT BUILD
  "bazel.commandLine.commandArgs": ["--compilation_mode=opt"],
  // "cmake.configureOnOpen": true,
  "cmake.options.statusBarVisibility": "visible",
  // "cmake.configureArgs": ["-DBUILD_DEPS=ON"],
  "cmake.buildArgs": ["-j8"],
  // C++
  "[cpp]": {},
  "C_Cpp.intelliSenseEngine": "Disabled",
  "C_Cpp.intelliSenseEngineFallback": "Enabled",
  // JAVA
  "[java]": {},
  // WEB
  "colorize.languages": [
      "javascript",
      "css",
      "sass",
      "scss",
      "less",
      "postcss",
      "sss",
      "stylus",
      "xml",
      "svg"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
